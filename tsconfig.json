{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "useUnknownInCatchVariables": false,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "src/**/*.mjs",
    "src/**/*.ts",
    "src/**/*.tsx",
    "webcomponents/**/*.ts",
    "webcomponents/**/*.tsx",
    ".next/types/**/*.ts",
    "tests-vitest/**/*.ts",
    "tests-vitest/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
